@import '_vars.styl'

.sect__events
	.sect__title
		font-size 1.600em
		margin-bottom 40px

.events__item
	display flex
	align-items center
	font-size 1.200em
	justify-content space-between
	margin-bottom 35px
	&--count
		display inline-block
		width 80px
		height 80px
		border-radius 50%
		text-align center
		border 1px solid $text-color
		font-size 45px
		line-height 80px
	&--title
		margin-bottom 10px

.article__row
	padding-bottom 60px
	margin-bottom 60px
	border-bottom 1px solid #e6e6e6	
	&:last-child
		border-bottom none
		margin-bottom 0
.events__article
	header
		margin-bottom 45px
	img
		max-width 260px
	&--title
		font-size 2.533em
		margin-bottom 45px
	&--info
		font-size 1.533em
	&--descr
		font-size 1.6000em
	.btn__wrapp
		margin-top 50px
	.btn__grey
		margin-left 0
		max-width 260px
		font-size 1.6000em
		padding 13px 0

		
	
		