@import '_vars.styl'


.gallery__wrapper
	width 100%
	min-height 700px
	
.gallery__item
	
	transition all .23s ease-in-out
	position relative
	display block
	overflow hidden
	img
		position relative
		z-index 4
		width 100%
		min-height 100%
		transition all .23s ease-in-out
		display block

	&--descr
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 5
		padding 30px
		color $light-color
		text-align left
		p
			font-size 1.067em
			transition all .4s ease-in-out
			padding 0 30px
	&--title
		font-size 2.467em
		text-transform uppercase
		transition all .4s ease-in-out
	
	&.first
		max-width 40%
		min-height 450px
		.gallery__item--descr
			p
				position absolute
				bottom -100%
				left 30px
		&:hover
			p
				bottom 30px	
	&.second
		max-width 60%
		min-height 200px
		.gallery__item--descr
			p
				position absolute
				top -100%
				left 30px
		&:hover
			p
				top 30px	
		.gallery__item--title
			position absolute
			left 50%
			transform translateX(-50%)
			bottom 30px
	&.third
		max-width 22.6%
		min-height 250px
		.gallery__item--title
			font-size 2.133em
		.gallery__item--descr
			p
				position absolute
				top -100%
				left 30px
			&:hover
				p
					top 30px
		.gallery__item--title
			position absolute
			bottom 30px
			left 50%
			transform translateX(-50%)	
	&.fourth
		max-width 62.6%
		min-height 250px
		.gallery__item--title
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			font-size 3.533em
			
		.gallery__item--descr
			p
				position absolute
				bottom -100%
				left 30px
			&:hover
				p
					bottom 30px
				.gallery__item--title
					top 60px
	&.five
		max-width 37.4%
		min-height 500px
		img
			min-height 502px
		.gallery__item--title
			position absolute
			top 50%
			left 30px
			transform translateY(-50%) rotate(-90deg)
			font-size 3.533em
			
		.gallery__item--descr
			p
				position absolute
				bottom -100%
				left 30px
			&:hover
				p
					bottom 30px

		
			
		