@import '_vars.styl'

.btn
	display inline-block
	background transparent
	outline none
	transition all .23s ease-in-out
	text-align center
	width 100%
	font-family $Rt
	&__dark
		color #f3f3f3
		text-transform uppercase
		font-size 1.067em
		max-width 195px
		padding 15px 0
		text-transform uppercase
		background rgba(0,0,0, .5)
		&:hover
			background rgba(0,0,0, .65)
	
	&__light
		max-width 180px
		padding 10px 0
		color $light-color
		border 2px solid $light-color
		font-size 1.400em
		&:hover
			opacity .5
			
	&__grey
		max-width 300px
		margin-left 55px
		padding 18px 0
		text-transform uppercase
		color $text-color
		border 2px solid $dark-bg
		font-size 1.867em
		&:hover
			opacity .6


