@import '_vars.styl'

.btn
	display inline-block
	background transparent
	outline none
	transition all .23s ease-in-out
	text-align center
	width 100%
	font-family $Rt
	&__dark
		color #f3f3f3
		text-transform uppercase
		font-size 1.067em
		max-width 195px
		padding 15px 0
		text-transform uppercase
		background rgba(0,0,0, .5)
		&:hover
			background rgba(0,0,0, .65)
	
	&__light
		max-width 180px
		padding 10px 0
		color $light-color
		border 2px solid $light-color
		font-size 1.400em
		&:hover
			opacity .5
			
	&__grey
		max-width 300px
		margin-left 55px
		padding 18px 0
		text-transform uppercase
		color $text-color
		border 2px solid $dark-bg
		font-size 1.867em
		&:hover
			opacity .6
			
	&__info
		width 55px
		height 55px
		border 1px solid $text-color
		line-height 55px
		font-size 41px
		border-radius 10px
		color $text-color
		background transparent
		font-family $Rt
		transition all .23s ease-in-out
		&:hover
			opacity .6
			
// Overlay
.overlay
	transition all .3s ease-in-out
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba($dark-bg, .7)
	z-index -1
	opacity 0
	visibility hidden
	
	&.active
		opacity 1
		visibility visible
		z-index 15


.popup
	position fixed
	top 50%
	left 50%
	transform translate(-50%, -50%)
	width 100%
	max-width 480px
	background $light-bg
	padding 25px
	border-radius 10px
	transition all .23s ease-in-out
	
	z-index -1
	opacity 0
	visibility hidden
	
	&.active
		z-index 25
		opacity 1
		visibility visible
	
	&__title
		font-size 1.600em
		margin-bottom 40px
		text-transform uppercase
		padding 0 20px
	
	.btn__close
		display block
		width 25px
		height 25px
		text-align center
		line-height 25px
		position absolute
		top 15px
		right 15px
		background transparent
		border-radius 6px
		border 1px solid $text-color
		color $text-color
		transition all .23s ease-in-out
		&:hover
			opacity .6
		

