// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1400px)
	// Author
	.sect__author
		background-size 30% 100%
		
	.sect__slider--gallery
		&:after
			right 10%
		&:before
			left 10%
+max-screen(1200px)
	// Header
	.header
		&__item
			&.rotate
				.header__item--title
					left -120%
					a
						margin 0
						
	// Contacts
	.form__descr
		left -40%
	.sect__contacts
		.sect__title
			&:before
				left 20px
				
	// Gallery
	.gallery__wrapper
		min-height 575px
	.gallery__item
		&.first
			min-height 368px
			
				
		&.second
			min-height 156px
			img
				min-height 157px
		&.third
			min-height 206px
		&.fourth
			min-height 205px
		&.five
			min-height 417px
			img
				min-height 418px
						
+max-screen(1000px)
	body
		font-size 14px
		
	// Footer
	.footer
		.author__info
			text-align center 
		.btn__wrapper
			text-align center
			
	// Contacts
	.form__descr
		left -52%
	.form__wrapper
		background none
		
	.form__input
		&.addr
			margin-right 15px
			

	.sect__slider--gallery
		&:after,
		&:before
			display none
			
	// Gallery
	.gallery__wrapper
		min-height 437px
	.gallery__item
		&--descr
			padding 15px
			p
				position relative
				padding 0
				font-size 12px
		&.first
			min-height 282px
			
			.gallery__item--title
				font-size 18px
			.gallery__item--descr
				p
					left auto
		&.second
			min-height 120px
			img
				min-height 121px
			.gallery__item--title
				font-size 18px
			.gallery__item--descr
				p
					left auto
				&:hover
					p
						top 10px
					
		&.third
			min-height 157px
			.gallery__item--title
				font-size 18px
				bottom 10px
			.gallery__item--descr
				p
					left auto
				&:hover
					p
						top 10px
		&.fourth
			min-height 157px
			.gallery__item--title
				font-size 18px
		&.five
			min-height 318px
			.gallery__item--title
				font-size 18px
			img
				min-height 319px
			&:hover
				.gallery__item--title
					top 15px

+max-screen(770px)
	.box
		padding 30px 0
	// Header
	.header
		padding 25px 0
		background none
		&:before
			display none
		&:after
			display block
			left 20%
			bottom auto
			top 125px
	
		.logo__wrapper
			margin-bottom 40px
			text-align center
		
		.nav__list
			text-align center
			&--item
				margin-right 30px
				margin-bottom 20px
				&:nth-child(2),
				&:last-child
					margin-right 0
		&__item
			text-align center
			&.rotate
				.header__item--title
					transform none
					position relative 
					left 0
			&--title
				margin-bottom 10px
				
	// Author
	.sect__author
		.author__info
			padding-left 0
		.author__img
			margin-bottom 25px
	
	.author__info--title
		text-align center
	.author__info--blockquote
		padding-left 0
		text-align center
	
	// Articles
	.sect__articles 
		.article
			padding-bottom 25px
			margin-bottom 25px
			border-bottom 1px solid $dark-bg
			text-align center
			&__thumb
				margin-bottom 20px
				
	// Footer
	.footer__title
		margin-bottom 25px
	
	.author__block
		padding-bottom 25px
		margin-bottom 25px
		border-bottom 1px solid $light-color
	
	.social__block
		padding-bottom 40px
		background-size contain
	
	.social__list
		text-align center
		
	#slider
		.owl-nav
			.owl-next
				right 0
			.owl-prev
				left 0
		
	//Contacts
	.form__descr
		position relative
		left 0
		transform none
		margin-bottom 25px
	.sect__contacts
		.sect__title
			padding-top 0
			margin-bottom 30px
			&:before
				display none
				
	// Events
	.events__article
		img
			display block
			margin 0 auto 25px auto
			max-width 350px
		header
			padding 0 15px
			margin-bottom 25px
		&--title
			margin-bottom 25px
		
		.btn__wrapp
			margin-top 20px
			text-align center
+max-screen(620px)
	// Contacts
	.input__row
		.form__input
			dispalay block
			max-width 100%
			&.addr
				margin-right 0
	.captcha__row
		display block
		text-align center
		.captcha
			margin-bottom 30px
		.btn
			margin-left 0
	
	.form
		option, 
		select
			font-size 18px
			
	input.form__input::-webkit-input-placeholder
		font-size 18px
		
	input.form__input::-moz-placeholder
		font-size 18px
		color $text-color
	input.form__input:-moz-placeholder
		font-size 18px
		color $text-color
	input.form__input:-ms-input-placeholder
		font-size 18px
		
	.gallery__item
		&.first,
		&.second,
		&.third,
		&.fourth,
		&.five
			max-width 100% !important
			min-height auto
			height 200px
			float none !important
			.gallery__item--title
				margin-bottom 20px
				position relative
				transform none
				left auto
				bottom auto
				top auto
			.gallery__item--descr
				p
					top auto
					left auto
					bottom auto
					font-size 14px
					position relative
			img
				min-height 200px
	
		
					

		

+max-screen(425px)
	body
		font-size 12px
	
	// Header
	.header
		&:after
			display block
			top 24%
			left 10%
		.logo__wrapper
			margin-bottom 25px
			
	// Author
	.author__img 
		img
			max-width 160px
	.sect__author
		background-size 50% 100%
	
	.slider__wrapper
		background none
	#slider
		.owl-nav
			.owl-next,
			.owl-prev
				margin-top -25px
		.btn
			left 50%
			transform translateX(-50%)
			max-width 135px
			
	.events__item
		display block
		padding-bottom 25px
		border-bottom 1px solid $dark-bg
		&--count
			margin-bottom 20px
			width 45px
			height 45px
			line-height 45px
			font-size 22px
		&--descr
			margin-bottom 20px
			
+max-screen(325px)
	// Header
	.header
		&:after
			display block
			top 27%
			left 10%
		.logo__wrapper
			margin-bottom 25px


