@import '_vars.styl'

.footer
	color $light-color
	padding 25px
	&__title
		font-size 2.533em
		margin-bottom 40px
		text-transform uppercase
	
	.author__info
		
		header
			margin-bottom 8px

		p
			font-size 1.200em
			margin-bottom 25px
			
	.author__img
		img
			max-width 130px

.social__block
	padding-bottom 75px
	background url('../img/footer-lines-img.png') right bottom no-repeat
	background-size contain			
.social__list
	text-align center
	&--item
		display inline-block
		margin-right 20px
		&:last-child
			margin-right 0
	&--link
		display block
		width 100px
		height 100px
		background url('../img/social-ic-sprite.png') no-repeat
		&.vk
			background-position  0 0
		&.youtube
			background-position -105px 0
		&:hover
			opacity .5
			
.copyright
	margin-top 30px
	color $text-color
	font-size 0.667em
