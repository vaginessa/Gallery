// File with all variables styles
@import '_vars.styl'

*
	padding 0
	margin 0
	box-sizing border-box
	
body
	font 15px $Rt
	overflow-x hidden
	background $body-bg
	height 100%
	color $text-color

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input[type="submit"]
	outline none

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	color $text-color
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer

img
	width 100%
	height auto
	
.clearfix:before,
.clearfix:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after
	content " "
	display table

.clearfix:after,
.container:after,
.container-fluid:after,
.row:after
	clear both



.left
	float left

.right
	float right

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
	
.box 
	padding 65px 0

.sect__light
	background $light-bg
.sect__dark
	background $dark-bg
	
.sect__title
	text-transform uppercase
	font-size 2.533em
	margin-bottom 75px