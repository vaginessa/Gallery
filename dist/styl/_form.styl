@import '_vars.styl'


.sect__contacts
	padding-top 0
	.sect__title
		padding-top 65px
		position relative
		&:before
			content ''
			background url('../img/contact-bg.png') center no-repeat
			height 181px
			width 28px
			background-size contain
			display inline-block
			position absolute
			top 0
			left 60px
			z-index 5
		
.form
	width 100%
	&__wrapper
		position relative
		background url('../img/form-bg.png') right bottom no-repeat
	&__input
		width 100%
		display block
		margin-bottom 30px
		background transparent
		border 2px solid $dark-bg
		padding 13px 20px
		font-size 1.667em
		transition all .23s ease-in-out
		outline none
		&:hover
			background $light-bg
		&:focus
			background $light-bg
		
		&.addr
			display inline-block
			margin-right 60px
			max-width 335px
		&.index
			display inline-block
			max-width 215px
		
	&__descr
		position absolute
		bottom 45%
		left -34%
		transform rotate(-90deg)
		z-index 10
	
		p
			font-size 1em 
			text-align left
			
			span
				text-transform uppercase
	select
		font 24px $Rt
		color $text-color
	option
		font 24px $Rt
		color $text-color
		padding 13px 20px
	
	&__popup
		.form__input
			padding 11px 15px
			font-size 1.2em
			margin-bottom 20px
			&::-webkit-input-placeholder
				font-size 1.2em
			&::-moz-placeholder
				font-size 1.2em
			&:-moz-placeholder
				font-size 1.2em
			&:-ms-input-placeholder
				font-size 1.2em
			&.addr
				display block
				max-width 100%
				margin-right 0
			&.index
				display block
				max-width 100%
		.captcha__row
			text-align center
			display block
			button 
				margin-left 0
				font-size 1.3em
				max-width 250px

				

input.form__input::-webkit-input-placeholder
	font 24px $Rt
	color $text-color
	
input.form__input::-moz-placeholder
	font 24px $Rt
	color $text-color
input.form__input:-moz-placeholder
	font 24px $Rt
	color $text-color
input.form__input:-ms-input-placeholder
	font 24px $Rt
	color $text-color
	

.captcha__row
	display flex
	align-items center
	button
		margin-left 50px
	

.time
	margin-top 35px
	font-size 1em
